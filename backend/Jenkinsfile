pipeline {
    agent any

    environment {
        AWS_REGION = 'ap-south-1'
        AWS_ACCOUNT_ID = credentials('AWS_ACCOUNT_ID')
        ECR_REPOSITORY_NAME = 'reels-music-backend'
        ECS_CLUSTER_NAME = 'reels-music-app'
        ECS_SERVICE_NAME = 'reels-music-backend-service'
        BRANCH_NAME = 'main'
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo 'Cloning repository...'
                git branch: env.BRANCH_NAME, url: 'https://github.com/csiitian/reels-music.git'
            }
        }

        stage('Initialize') {
            steps {
                script {
                    env.IMAGE_TAG = "${env.BRANCH_NAME}-${env.BUILD_NUMBER}"
                }
            }
        }

        stage('Build Application') {
            steps {
                echo 'Building Spring Boot project...'
                sh 'cd backend && mvn clean package -DskipTests'
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'Building Docker image...'
                sh '''
                    $(aws ecr get-login-password --region $AWS_REGION | docker login --username AWS --password-stdin $AWS_ACCOUNT_ID.dkr.ecr.$AWS_REGION.amazonaws.com)
                    docker build -t $ECR_REPOSITORY_NAME:$IMAGE_TAG backend/
                    docker tag $ECR_REPOSITORY_NAME:$IMAGE_TAG $AWS_ACCOUNT_ID.dkr.ecr.$AWS_REGION.amazonaws.com/$ECR_REPOSITORY_NAME:$IMAGE_TAG
                '''
            }
        }

        stage('Push Docker Image to ECR') {
            steps {
                echo 'Pushing Docker image to AWS ECR...'
                sh '''
                    docker push $AWS_ACCOUNT_ID.dkr.ecr.$AWS_REGION.amazonaws.com/$ECR_REPOSITORY_NAME:$IMAGE_TAG
                '''
            }
        }

        stage('Deploy to ECS') {
            steps {
                echo 'Deploying new version to ECS...'
                sh '''
                    aws ecs update-service \
                        --cluster $ECS_CLUSTER_NAME \
                        --service $ECS_SERVICE_NAME \
                        --force-new-deployment \
                        --region $AWS_REGION
                '''
            }
        }
    }

    post {
        success {
            echo 'Deployment successful! üöÄ'
        }
        failure {
            echo 'Deployment failed ‚ùå'
        }
    }
}
